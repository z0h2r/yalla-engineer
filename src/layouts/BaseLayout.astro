<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Yalla Engineer – Ship it, fix it, yalla again</title>
    <meta
      name="description"
      content="Fast-paced engineering insights, quick wins, and that unstoppable 'let's go' mentality. Build, ship, iterate - yalla!"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col items-center justify-start">
    <main class="w-full p-0 m-0 min-h-screen">
      <!-- Terminal-style navigation bar -->
      <div class="terminal-nav font-mono text-sm shadow-lg">
        <div class="flex items-center justify-between h-14 px-4 sm:px-6">
          <!-- Terminal window controls (left side) -->
          <div class="flex items-center space-x-4">
            <!-- Window controls -->
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <!-- Terminal prompt -->
            <div class="flex items-center space-x-2">
              <slot name="header-left" />
              <span class="text-cyan-600">$</span>
              <span class="text-purple-700 font-semibold"
                ><slot name="header-title" /></span
              >
              <span class="animate-pulse text-blue-600">▌</span>
            </div>
          </div>
        </div>
      </div>
      <slot />
    </main>
  </body>
</html>
